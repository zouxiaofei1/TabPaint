<Window x:Class="SodiumPaint.ResizeCanvasDialog"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="调整画布大小" SizeToContent="WidthAndHeight" WindowStartupLocation="CenterOwner"
        ResizeMode="NoResize" ShowInTaskbar="False"
        Loaded="Window_Loaded">
    <Border Padding="15">
        <StackPanel>
            <Grid>
                <Grid.RowDefinitions>
                    <RowDefinition Height="Auto"/>
                    <RowDefinition Height="Auto"/>
                </Grid.RowDefinitions>
                <Grid.ColumnDefinitions>
                    <ColumnDefinition Width="Auto"/>
                    <ColumnDefinition Width="*"/>
                    <ColumnDefinition Width="Auto"/>
                </Grid.ColumnDefinitions>

                <Label Grid.Row="0" Grid.Column="0" Content="宽度:" VerticalAlignment="Center"/>
                <TextBox x:Name="WidthTextBox" Grid.Row="0" Grid.Column="1" Margin="5,0" MinWidth="80"/>
                <Label Grid.Row="0" Grid.Column="2" Content="像素" VerticalAlignment="Center"/>

                <Label Grid.Row="1" Grid.Column="0" Content="高度:" VerticalAlignment="Center" Margin="0,5,0,0"/>
                <TextBox x:Name="HeightTextBox" Grid.Row="1" Grid.Column="1" Margin="5,5,5,0" MinWidth="80"/>
                <Label Grid.Row="1" Grid.Column="2" Content="像素" VerticalAlignment="Center" Margin="0,5,0,0"/>
            </Grid>

            <StackPanel Orientation="Horizontal" HorizontalAlignment="Right" Margin="0,20,0,0">
                <Button x:Name="OkButton" Content="确定" Width="75" IsDefault="True" Click="OkButton_Click"/>
                <Button x:Name="CancelButton" Content="取消" Width="75" Margin="10,0,0,0" IsCancel="True"/>
            </StackPanel>
        </StackPanel>
    </Border>
</Window>

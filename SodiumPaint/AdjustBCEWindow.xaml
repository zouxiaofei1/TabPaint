<Window x:Class="SodiumPaint.AdjustBCEWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="亮度 / 对比度 / 曝光" Height="300" Width="400"
        WindowStartupLocation="CenterOwner">
    <Grid Margin="10">
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>

        <StackPanel Orientation="Vertical" Grid.Row="0" Margin="0,0,0,10">
            <TextBlock Text="亮度" Margin="0,0,0,5"/>
            <Slider x:Name="BrightnessSlider" Minimum="-100" Maximum="100" Value="0"
                    TickFrequency="1" IsSnapToTickEnabled="True"
                    ValueChanged="Slider_ValueChanged"/>

            <TextBlock Text="对比度" Margin="0,10,0,5"/>
            <Slider x:Name="ContrastSlider" Minimum="-100" Maximum="100" Value="0"
                    TickFrequency="1" IsSnapToTickEnabled="True"
                    ValueChanged="Slider_ValueChanged"/>

            <TextBlock Text="曝光" Margin="0,10,0,5"/>
            <Slider x:Name="ExposureSlider" Minimum="-2" Maximum="2" Value="0"
                    TickFrequency="0.1" IsSnapToTickEnabled="True"
                    ValueChanged="Slider_ValueChanged"/>
        </StackPanel>

        <StackPanel Orientation="Horizontal" Grid.Row="1" HorizontalAlignment="Right">
            <Button Content="确定" Width="80" Margin="0,0,10,0" Click="Ok_Click"/>
            <Button Content="取消" Width="80" Click="Cancel_Click"/>
        </StackPanel>
    </Grid>
</Window>

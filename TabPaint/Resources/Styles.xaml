    <Style x:Key="Win11SliderThumbStyle" TargetType="Thumb">
        <Setter Property="SnapsToDevicePixels" Value="true"/>
        <Setter Property="OverridesDefaultStyle" Value="true"/>
        <Setter Property="Height" Value="18"/>
        <Setter Property="Width" Value="18"/>
        <Setter Property="Template">
            <Setter.Value>
                <ControlTemplate TargetType="Thumb">
                    <Grid>
                        <!-- æ»‘å—å¤–åœˆ -->
                        <Ellipse x:Name="OuterRing" 
                             Fill="White" 
                             Stroke="#BBB" 
                             StrokeThickness="1"/>
                        <!-- æ»‘å—å†…åœ† (Win11 ç‰¹è‰²) -->
                        <Ellipse x:Name="InnerDot" 
                             Fill="{StaticResource Win11AccentBrush}" 
                             Width="10" Height="10" 
                             VerticalAlignment="Center" HorizontalAlignment="Center">
                            <Ellipse.RenderTransform>
                                <ScaleTransform ScaleX="1" ScaleY="1" CenterX="3" CenterY="3"/>
                            </Ellipse.RenderTransform>
                        </Ellipse>
                    </Grid>
                    <ControlTemplate.Triggers>
                        <Trigger Property="IsMouseOver" Value="True">
                            <Setter TargetName="OuterRing" Property="Stroke" Value="#888"/>
                            <Setter TargetName="InnerDot" Property="Stroke" Value="#005196"/>
                            <Setter TargetName="InnerDot" Property="Fill" Value="#005196"/>
                        </Trigger>
                    </ControlTemplate.Triggers>
                </ControlTemplate>
            </Setter.Value>
        </Setter>
    </Style>


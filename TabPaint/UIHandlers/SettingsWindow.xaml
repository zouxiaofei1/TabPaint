<Window x:Class="TabPaint.SettingsWindow"
        xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
        xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
        Title="TabPaint 设置" Height="450" Width="600"
        ResizeMode="NoResize" WindowStartupLocation="CenterOwner"
        Background="#F9F9F9">

    <Window.Resources>
        <!-- Win11 风格主要按钮样式 -->
        <Style x:Key="Win11PrimaryButtonStyle" TargetType="Button">
            <Setter Property="Background" Value="#0067C0"/>
            <Setter Property="Foreground" Value="White"/>
            <Setter Property="BorderThickness" Value="0"/>
            <Setter Property="FontSize" Value="14"/>
            <Setter Property="FontWeight" Value="Normal"/>
            <Setter Property="Cursor" Value="Hand"/>
            <Setter Property="Template">
                <Setter.Value>
                    <ControlTemplate TargetType="Button">
                        <Border x:Name="border" 
                                Background="{TemplateBinding Background}" 
                                CornerRadius="4" 
                                BorderBrush="{TemplateBinding BorderBrush}" 
                                BorderThickness="{TemplateBinding BorderThickness}">
                            <ContentPresenter HorizontalAlignment="Center" 
                                              VerticalAlignment="Center" 
                                              RecognizesAccessKey="True"/>
                        </Border>
                        <ControlTemplate.Triggers>
                            <Trigger Property="IsMouseOver" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#1975C5"/>
                            </Trigger>
                            <Trigger Property="IsPressed" Value="True">
                                <Setter TargetName="border" Property="Background" Value="#005A9E"/>
                                <Setter TargetName="border" Property="Opacity" Value="0.9"/>
                            </Trigger>
                            <Trigger Property="IsEnabled" Value="False">
                                <Setter TargetName="border" Property="Background" Value="#CCCCCC"/>
                                <Setter Property="Foreground" Value="#666666"/>
                            </Trigger>
                        </ControlTemplate.Triggers>
                    </ControlTemplate>
                </Setter.Value>
            </Setter>
        </Style>
    </Window.Resources>

    <Grid>
        <Grid.ColumnDefinitions>
            <ColumnDefinition Width="160"/>
            <!-- 左侧导航栏 -->
            <ColumnDefinition Width="*"/>
            <!-- 右侧内容区 -->
        </Grid.ColumnDefinitions>
        <Grid.RowDefinitions>
            <RowDefinition Height="*"/>
            <RowDefinition Height="60"/>
            <!-- 底部栏 (稍微加高一点以容纳按钮) -->
        </Grid.RowDefinitions>

        <!-- 左侧导航 -->
        <Border Grid.Row="0" Grid.Column="0" Background="#F0F0F0" BorderBrush="#E5E5E5" BorderThickness="0,0,1,0">
            <StackPanel Margin="0,10">
                <ListBox x:Name="NavListBox" SelectionChanged="NavListBox_SelectionChanged" Background="Transparent" BorderThickness="0">
                    <ListBox.Resources>
                        <Style TargetType="ListBoxItem">
                            <Setter Property="Padding" Value="15,10"/>
                            <Setter Property="FontSize" Value="14"/>
                            <Setter Property="Background" Value="Transparent"/>
                            <Setter Property="Cursor" Value="Hand"/>
                            <Setter Property="Template">
                                <Setter.Value>
                                    <ControlTemplate TargetType="ListBoxItem">
                                        <Border Name="Border" Padding="{TemplateBinding Padding}" Background="{TemplateBinding Background}">
                                            <ContentPresenter />
                                        </Border>
                                        <ControlTemplate.Triggers>
                                            <Trigger Property="IsSelected" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="White"/>
                                                <Setter TargetName="Border" Property="BorderBrush" Value="#0067C0"/>
                                                <Setter TargetName="Border" Property="BorderThickness" Value="4,0,0,0"/>
                                                <Setter Property="Foreground" Value="Black"/>
                                                <Setter Property="FontWeight" Value="SemiBold"/>
                                            </Trigger>
                                            <Trigger Property="IsMouseOver" Value="True">
                                                <Setter TargetName="Border" Property="Background" Value="#EAEAEA"/>
                                            </Trigger>
                                        </ControlTemplate.Triggers>
                                    </ControlTemplate>
                                </Setter.Value>
                            </Setter>
                        </Style>
                    </ListBox.Resources>

                    <ListBoxItem IsSelected="True">常规设置</ListBoxItem>
                    <ListBoxItem>关于</ListBoxItem>
                </ListBox>
            </StackPanel>
        </Border>

        <!-- 右侧内容区 -->
        <Border Grid.Row="0" Grid.Column="1" Padding="24" Background="White">
            <Grid>
                <!-- 设置页内容 -->
                <StackPanel x:Name="SettingsPanel" Visibility="Visible">
                    <TextBlock Text="常规设置" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,20"/>

                    <CheckBox Content="画布上滚轮放大缩小" Margin="0,10" IsChecked="True" FontSize="14"/>
                    <CheckBox Content="滚动切图 (ImageBar)" Margin="0,10" FontSize="14"/>
                    <CheckBox Content="上下移动画布" Margin="0,10" FontSize="14"/>

                    <Separator Margin="0,20"/>
                    <TextBlock Text="启动" FontWeight="SemiBold" FontSize="16" Margin="0,5,0,10"/>
                    <CheckBox Content="记住上次启动功能" Margin="0,5" FontSize="14"/>
                </StackPanel>

                <!-- 关于页内容 -->
                <StackPanel x:Name="AboutPanel" Visibility="Collapsed">
                    <TextBlock Text="关于 TabPaint" FontSize="20" FontWeight="SemiBold" Margin="0,0,0,24"/>

                    <!-- App Logo / Icon -->
                    <!-- 替换了之前的占位 Border，使用了 64x64 的大小以适应关于页面 -->
                    <Image x:Name="AppIcon" 
                           Source="pack://application:,,,/Resources/TabPaint.ico" 
                           Width="64" Height="64" 
                           HorizontalAlignment="Left" 
                           RenderOptions.BitmapScalingMode="HighQuality"
                           Margin="0,0,0,16"/>

                    <TextBlock Text="TabPaint" FontSize="18" FontWeight="SemiBold"/>
                    <TextBlock Text="轻量级绘画与看图工具" Foreground="Gray" FontSize="14" Margin="0,4,0,24"/>

                    <StackPanel Orientation="Horizontal" Margin="0,4">
                        <TextBlock Text="开发者: " Foreground="Gray"/>
                        <TextBlock Text="zouxiaofei1"/>
                    </StackPanel>

                    <StackPanel Orientation="Horizontal" Margin="0,4">
                        <TextBlock Text="技术栈: " Foreground="Gray"/>
                        <TextBlock Text=".NET WPF, Win32 API"/>
                    </StackPanel>
                </StackPanel>
            </Grid>
        </Border>

        <!-- 底部栏 -->
        <Border Grid.Row="1" Grid.Column="0" Grid.ColumnSpan="2" Background="#F3F3F3" BorderBrush="#E5E5E5" BorderThickness="0,1,0,0">
            <DockPanel LastChildFill="False" VerticalAlignment="Center" Margin="24,0">
                <!-- 左下角版本号 -->
                <TextBlock DockPanel.Dock="Left" Text="TabPaint v0.7.1 alpha" Foreground="#888888" VerticalAlignment="Center" FontSize="12"/>

                <!-- 右下角确定按钮，应用了新的 Win11 样式 -->
                <Button DockPanel.Dock="Right" 
                        Content="确定" 
                        Width="100" Height="32" 
                        Click="OkButton_Click" 
                        IsDefault="True"
                        Style="{StaticResource Win11PrimaryButtonStyle}"/>
            </DockPanel>
        </Border>
    </Grid>
</Window>

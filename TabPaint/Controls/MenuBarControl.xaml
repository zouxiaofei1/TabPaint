<UserControl x:Class="TabPaint.Controls.MenuBarControl"
             xmlns="http://schemas.microsoft.com/winfx/2006/xaml/presentation"
             xmlns:x="http://schemas.microsoft.com/winfx/2006/xaml"
             xmlns:mc="http://schemas.openxmlformats.org/markup-compatibility/2006" 
             xmlns:d="http://schemas.microsoft.com/expression/blend/2008" 
             xmlns:local="clr-namespace:TabPaint.Controls"
             mc:Ignorable="d" 
             d:DesignHeight="40" d:DesignWidth="800">

    <UserControl.Resources>
        <ResourceDictionary>
            <ResourceDictionary.MergedDictionaries>
                <ResourceDictionary Source="pack://application:,,,/Resources/Styles.xaml"/>
            </ResourceDictionary.MergedDictionaries>
        </ResourceDictionary>
    </UserControl.Resources>

    <!-- 这里的 Border 不需要 DockPanel.Dock，也不需要 Height (让外部容器决定或自适应) -->
    <Border Height="36" Background="#50FFFFFF" AllowDrop="True" MouseLeftButtonDown="OnRootBorderMouseDown">
        <DockPanel LastChildFill="False" VerticalAlignment="Center" Margin="1,0">
            <Menu DockPanel.Dock="Left" Background="Transparent" BorderThickness="0" FontSize="14" Padding="0" Margin="0">
                <!-- 文件菜单 -->
                <MenuItem Header="文件" Style="{StaticResource ModernMenuItemStyle}" SubmenuOpened="OnFileMenuOpened">
                    <MenuItem Header="新建" Style="{StaticResource Win11MenuItemStyle}" InputGestureText="Ctrl+N" Click="OnNewClick">
                        <MenuItem.Icon>
                            <Path Data="{DynamicResource NewFile_Image}" Stretch="Uniform" Fill="#333" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="打开" Style="{StaticResource Win11MenuItemStyle}" InputGestureText="Ctrl+O" Click="OnOpenClick">
                        <MenuItem.Icon>
                            <Path Data="{DynamicResource Open_Folder_Image}" Stretch="Uniform" Fill="#333" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="最近打开" x:Name="RecentFilesMenuItem" Style="{StaticResource Win11MenuItemStyle}">
                        <MenuItem.Icon>
                            <Path Data="{DynamicResource Reset_Image}"  Stretch="Uniform" Fill="#333" Width="16" Height="16"/>
                        </MenuItem.Icon>
                        <MenuItem Header="占位符"  Style="{StaticResource Win11MenuItemStyle}" />
                    </MenuItem>
                    <Separator Style="{StaticResource MenuSeparator}"/>
                    <MenuItem Header="保存" Style="{StaticResource Win11MenuItemStyle}" InputGestureText="Ctrl+S" Click="OnSaveClick">
                        <MenuItem.Icon>
                            <Path Data="{DynamicResource Save_Normal_Image}" Stretch="Uniform" Fill="#333" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="另存为" Style="{StaticResource Win11MenuItemStyle}" Click="OnSaveAsClick">
                        <MenuItem.Icon>
                            <Path Data="{DynamicResource Save_Button_Image}" Stretch="Uniform" Fill="#333" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="退出" Style="{StaticResource Win11MenuItemStyle}" Click="OnExitClick">
                        <MenuItem.Icon>
                            <Path Data="{DynamicResource Exit_Image}" Stretch="Uniform" Fill="Transparent"  Stroke="#333"  StrokeThickness="1.5" StrokeLineJoin="Round"  StrokeEndLineCap="Round"   StrokeStartLineCap="Round" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>

                <!-- 编辑菜单 -->
                <MenuItem Header="编辑" Style="{StaticResource ModernMenuItemStyle}">
                    <MenuItem Header="复制" Style="{StaticResource SubMenuItemStyle}" InputGestureText="Ctrl+C" Click="OnCopyClick">
                        <MenuItem.Icon>
                            <Path Data="{DynamicResource Copy_Image}" Stretch="Uniform" Fill="#333" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="剪切" Style="{StaticResource SubMenuItemStyle}" InputGestureText="Ctrl+X" Click="OnCutClick">
                        <MenuItem.Icon>
                            <Path Data="{DynamicResource Cut_Image}" Stretch="Uniform" Fill="#333" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="粘贴" Style="{StaticResource SubMenuItemStyle}" InputGestureText="Ctrl+V" Click="OnPasteClick">
                        <MenuItem.Icon>
                            <Path Data="{DynamicResource Paste_Image}" Stretch="Uniform" Fill="#333" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>


                <!-- 效果菜单 -->
                <MenuItem Header="效果" Style="{StaticResource ModernMenuItemStyle}">
                    <MenuItem Header="亮度/对比度/曝光" Style="{StaticResource SubMenuItemStyle}" Click="OnBCEClick">
                        <MenuItem.Icon>
                            <Path Data="{DynamicResource Brightness_Image}" Stretch="Uniform" Fill="#333" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="色温/色调/饱和度" Style="{StaticResource SubMenuItemStyle}" Click="OnTTSClick">
                        <MenuItem.Icon>
                            <Path Data="{DynamicResource Color_Temperature_Image}" Stretch="Uniform" Fill="#333" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <MenuItem Header="黑白" Style="{StaticResource SubMenuItemStyle}" Click="OnBlackWhiteClick">
                        <MenuItem.Icon>
                            <Path Data="{DynamicResource Black_And_White_Image}" Stretch="Uniform" Fill="#333" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                    <Separator Style="{StaticResource MenuSeparator}"/>
                    <MenuItem Header="调整大小" Style="{StaticResource SubMenuItemStyle}" Click="OnResizeCanvasClick">
                        <MenuItem.Icon>
                            <Path Data="{DynamicResource Resize_Image}" Stretch="Uniform" Fill="Transparent"  Stroke="#333"  StrokeThickness="1.5" StrokeLineJoin="Round"  StrokeEndLineCap="Round"   StrokeStartLineCap="Round" Width="16" Height="16"/>
                        </MenuItem.Icon>
                    </MenuItem>
                </MenuItem>
            </Menu>
            <!-- 快捷操作按钮 -->
            <Border DockPanel.Dock="Left" Width="1" Background="#CCC" Margin="2,4"/>
            <StackPanel DockPanel.Dock="Left" Orientation="Horizontal" VerticalAlignment="Center">
                <Button Margin="6,0" ToolTip="保存" Click="OnSaveClick" Style="{StaticResource RoundedMenuButtonStyle}">
                    <Path Data="{DynamicResource Save_Normal_Image}" Stretch="Uniform" Fill="#333" Width="16" Height="16"/>
                </Button>
                <Border DockPanel.Dock="Left" Width="1" Background="#CCC" Margin="2,4"/>

                <!-- 注意：Undo/Redo 按钮需要 x:Name 以便后台代码暴露属性 -->
                <Button Margin="6,0" ToolTip="撤销" x:Name="UndoButton" Click="OnUndoClick" IsEnabled="False" Style="{StaticResource RoundedMenuButtonStyle}">
                    <Path x:Name="UndoIcon" Data="{DynamicResource Undo_Image}" Stretch="Uniform" Fill="#333" Width="16" Height="16"/>
                </Button>
                <Button ToolTip="重做" x:Name="RedoButton" Click="OnRedoClick" IsEnabled="False" Style="{StaticResource RoundedMenuButtonStyle}">
                    <Path x:Name="RedoIcon" Data="{DynamicResource Redo_Image}" Stretch="Uniform" Fill="#333" Width="16" Height="16"/>
                </Button>
            </StackPanel>

            <Button DockPanel.Dock="Right" Margin="10,5" Padding="2" ToolTip="设置" Click="OnSettingsClick" Style="{StaticResource RoundedMenuButtonStyle}">
                <Path Data="{DynamicResource Settings_Image}" Stretch="Uniform" Fill="#333" Width="18" Height="18"/>
            </Button>
        </DockPanel>
    </Border>
</UserControl>
